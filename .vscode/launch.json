    "version": "0.2.0",
    "configurations": [
        {
            "name": "JEDM transitions paper",
            "type": "python",
            "request": "launch",
            "program": "main_docx.py",
            "args": [
                "~/Box/_bosch/papers/journals/JEDM/2020_transitions/camera/bosch-transitions-jedm20-rev1-camera.docx",
                "~/Downloads/tmpdocx/",
                "--template", "JEDM"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "${userHome}/miniconda3/envs/paper_convert/bin/python"
        },
        {
            "name": "References module standalone",
            "type": "python",
            "request": "launch",
            "module": "shared.references",
            "justMyCode": true,
            "python": "${userHome}/miniconda3/envs/paper_convert/bin/python"
        },
        {
            "name": "Current file",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "${userHome}/miniconda3/envs/paper_convert/bin/python"
        }
    ]
}